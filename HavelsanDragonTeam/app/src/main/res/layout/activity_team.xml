<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listViewBackColor"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resultPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning_no_joined_team"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_my_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/action_button_text_size"
        android:layout_marginTop="@dimen/components_bottom_margin"
        android:layout_centerHorizontal="true"
        android:text="@string/my_teams"></TextView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/team_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_add"
        android:layout_below="@id/txt_my_teams"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/components_top_margin">

        <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listView_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/listViewBackColor"
            android:drawSelectorOnTop="true" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/frame_horizontal_margin"
        android:layout_marginBottom="@dimen/frame_horizontal_margin"
        android:backgroundTint="@color/white"
        android:elevation="10dp">

        <Button
            android:id="@+id/btn_create_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/frame_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_action"
            android:drawableTop="@drawable/join_team_layer"
            android:drawableTint="@color/white"
            android:text="Create Team"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_join_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frame_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_action"
            android:drawableTop="@drawable/join_team_layer"
            android:drawableTint="@color/white"
            android:text="Join Team"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
