<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/frame_horizontal_margin"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/components_top_margin">

        <ImageView
            android:id="@+id/button_rotate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/rotate"/>
        <Button
            android:id="@+id/button_crop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/apply"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/button_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/components_left_margin"
            android:src="@drawable/close"
            app:tint="@color/white"></ImageView>
    </LinearLayout>

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/imageview_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/components_top_margin"
        android:adjustViewBounds="true" />


</LinearLayout>