<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/frame_horizontal_margin"
    android:layout_marginTop="@dimen/components_bottom_margin"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/components_left_margin"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/components_top_margin"
        android:text="2 MayÄ±s 2022, Cuma 02:53"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />
    <ImageView
        android:id="@+id/img_unread"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/red"
        android:visibility="gone">
    </ImageView>
    <TextView
        android:id="@+id/txt_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/components_top_margin"
        android:layout_below="@+id/txt_time"
        android:text="Herkes antremana gelsin"
        android:textColor="@color/textColor" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>