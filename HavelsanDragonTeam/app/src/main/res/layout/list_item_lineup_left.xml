<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_lineup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/components_left_margin"
    android:layout_marginRight="@dimen/frame_horizontal_margin"
    android:layout_marginBottom="@dimen/frame_horizontal_margin"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_side"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginRight="@dimen/components_left_margin"
        android:textColor="@color/white"
        android:text="L1"></TextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/uniform2" />

        <TextView
            android:id="@+id/txt_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:background="@drawable/background_lineup"
            android:textSize="@dimen/lineup_text_size"
            android:text="Rasim"
            android:textAlignment="center"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
</LinearLayout>